<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%thread] [%highlight(%-5level)] [%cyan(%d{dd-MM-yyyy
        HH:mm:ss.SSS})][][%magenta(%logger{36})] - %msg%n
      </pattern>
    </encoder>
  </appender>

  <root level="${LOG_LEVEL:-INFO}">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
